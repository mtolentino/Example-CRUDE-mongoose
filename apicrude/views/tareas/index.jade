extends ../layout

block content
  h1 Mis tareas
  p listA Mongo DB
 
  - if(docs.length)
   each tarea in docs
          ul
            //////muestra row select
            li  #{tarea.tarea}
                           ///editar con id
                 a.btn(href="/tareas/#{tarea.id}/editar") Editar
                        //form de delte
                form(method='post', action='/tareas/' + tarea.id)
                input(name='_method', value='DELETE', type='hidden')
                button.btn(type='submit') Borrar
                //si esta vacio
  - else
    p No tienes ninguna tarea